<?xml version="1.0" encoding="UTF-8" ?>
<sitemaps>
    <map name="login" default="true">
        <model>Rexume\Models\LoginModel</model>
        <view>Rexume\Views\LoginView</view>
        <controller>Rexume\Controllers\LoginController</controller>
        <defaultAction>simple</defaultAction>
    </map>
    <!--Match all invalid URLS-->
    <map name="*">
        <model>Rexume\Views\NavigationModel</model>
        <view>Rexume\Views\NavigationView</view>
        <controller>Rexume\Controllers\NavigationController</controller>
        <defaultAction>error</defaultAction>
    </map>
</sitemaps>